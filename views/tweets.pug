extends layout

block content
    div#app.content
        div.main-container
            div.header
                div.header-background
                    img(src=`${profile.banner}`)
                div.header-profile-picture
                    div.profile-picture-container
                        img(src=`${profile.image}`)
                div.button-container
                    div.twitter-button
