extends layout

block content
    script(src='/js/main.js')

    div#app.content
        div.main-container
            div.header
                div.header-background
                    img(src=`${profile.banner}`)
                div.header-profile-picture
                    div.profile-picture-container
                        img(src=`${profile.image}`)
                div.button-container
                    div.button
                        a(href=`/${baseUrl}/update`) Get new tweets

            div.tweets-container
                include tweetsPage
